@using MvcCv.Models.Entity
@model List<Education>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Eğitim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık 2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ID</th>
            <th>@item.Heading</th>
            <th>@item.subtitle1</th>
            <th>@item.subtitle2</th>
            <th>@item.Date</th>
            <th>@item.GNO</th>
            <td>
                <a class="btn btn-danger btn-sm" href="/Education/RemoveEducation/@item.ID">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="/Education/UpdateEducation/@item.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
            </td>
        </tr>
    }
</table>
<a href="/Education/AddEducation/" class="btn btn-primary">Yeni Eğitim Ekle</a>