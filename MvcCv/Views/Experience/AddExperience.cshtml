
@{
    ViewBag.Title = "AddExperience";
    Layout = "~/Views/Shared/_AdimLayout.cshtml";
}

<br />
<h4>Yeni Deneyim Ekleme Sayfası</h4>
<br />
<form method="post">
    <input type="text" name="Heading" class="form-control" placeholder="Başlığı Yazınız" />
    <br />
    <input type="text" name="Subtitle" class="form-control" placeholder="Alt Başlığı Yazınız" />
    <br />
    <input type="text" name="Date" class="form-control" placeholder="Çalışma Tarihi" />
    <br />
    <textarea placeholder="Açıklamanızı giriniz" name="Description" class="form-control" rows="5"></textarea>
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
